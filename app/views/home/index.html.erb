<section class="bg-home" id="particles">
    <div class="bg-overlay"></div>
    <div class="home-center">
        <div class="home-desc-center">
            <div class="container particels-slidero">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="home-help">
                            <h3 class="home-title mb-0">
                                <span class="element"></span>
                            </h3>
                            <p class="home-desc-2 text-white mt-4 font-italic">
                                Become the best version of yourself!
                            </p>
                            <div class="mt-4 pt-3">
                                <a href="#blog" class="btn btn-outline-secondary text-white text-uppercase">Read Now</a>
                            </div>                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- END HOME -->

<section class="bg-light" id="blog">
    <div class="container">
        <% @posts.each do |post| %>
            <div class="row text-center section">
                <div class="col-12">
                    <div class="blog-title">
                        <%= link_to truncate(post.Title, length: 35), post, class: "title" %>
                    </div>
                    <p class="blog-author"><%= post.created_at %></p>
                    <p class="blog-content">
                        
                        <%= truncate(simple_format(post.Content), length: 100, escape: false) %>
                    </p>
                </div>
            </div>
        <% end %>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <nav>
                    <ul class="pagination justify-content-center">
                    <% if @page >0 %>
                        <% if @page -1 >0 %>
                        <li class="page-item">
                            <%= link_to "Previous", root_path(page: @page - 1), class: "page-link" %>
                        </li>
                        <% end %>
                        <li class="page-item">
                            <%= link_to @page, root_path(page: @page), class: "page-link" %>
                        </li>
                        <li class="page-item">
                            <%= link_to "Next", root_path(page: @page + 1), class: "page-link" %>
                        </li>
                    <% end %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
