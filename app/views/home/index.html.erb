<section class="bg-home" id="home">
    <div class="bg-overlay"></div>
    <div class="home-center">
        <div class="home-desc-center">
            <div class="container particels-slidero">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="home-help">
                            <h3 class="home-title mb-0"><span class="element" data-elements="Take a trip, Bring your most incredible idea into reality, Compete to achieve more, Find the courage to be yourself, Fight for your love!, Don't be afraid of responsibility, Remember the whole world is open to you!"></span></h3>
                            <p class="home-desc-2 text-white mt-4 font-italic">
                                Become the best version of yourself!
                            </p>
                            <div class="mt-4 pt-3">
                                <a href="#blog" class="btn btn-outline-secondary text-white text-uppercase">Read Now</a>
                            </div>                                
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- END HOME -->

<section class="bg-light" id="blog">
    <div class="container">
        <% @posts.each do |post| %>
            <div class="row text-center section">
                <div class="col-12">
                    <div class="blog-title">
                        <%= link_to truncate(post.Title, length: 35), post, class: "title" %>
                    </div>
                    <p class="blog-author"><%= post.Author %>/ <%= post.created_at %></p>
                    <p class="blog-content">
                        <%= truncate(post.Content, length: 120) %>
                    </p>
                </div>
            </div>
        <% end %>
    </div>
</section>
